<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet id="10012021" author="ADavidson">
        <createTable tableName="prompts">
            <column name="id" type="INT">
                <constraints primaryKey="true" primaryKeyName="prompt_id_pk" />
            </column>
            <column name="prompt" type="varchar(250)">
                <constraints nullable="false" notNullConstraintName="prompt_nn"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="prompts" columnName="id" columnDataType="INT" startWith="1" incrementBy="1" />
        <createSequence sequenceName="hibernate_sequence" incrementBy="1" startValue="1" />
    </changeSet>
    <changeSet id="20211005" author="ADavidson">
        <createTable tableName="responses">
            <column name="id" type="INT">
                <constraints primaryKey="true" primaryKeyName="response_id_pk" />
            </column>
            <column name="prompt_id" type="INT"></column>
            <column name="response" type="text">
                <constraints nullable="false" notNullConstraintName="response_nn" />
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="responses"
                baseColumnNames="prompt_id"
                constraintName="fk_responses_prompts"
                referencedTableName="prompts"
                referencedColumnNames="id"
        />
        <addAutoIncrement tableName="responses" columnName="id" columnDataType="INT" startWith="1" incrementBy="1"/>
    </changeSet>
    <changeSet id="20211025" author="ADavidson">
        <addColumn tableName="responses">
            <column name="up_votes" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="down_votes" type="INT">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
    <changeSet id="20211209" author="ADavidson">
        <createTable tableName="users">
            <column name="user_id" type="INT">
                <constraints primaryKey="true" primaryKeyName="user_id_pk" />
            </column>
            <column name="username" type="varchar(45)">
                <constraints nullable="false" notNullConstraintName="password_nn" />
            </column>
            <column name="password" type="varchar(64)">
                <constraints nullable="false" notNullConstraintName="password_nn" />
            </column>
            <column name="role" type="varchar(45)">
                <constraints nullable="false" notNullConstraintName="role_nn" />
            </column>
            <column name="enabled" type="tinyint">
                <constraints nullable="false" notNullConstraintName="enabled_nn" />
            </column>
        </createTable>
        <addAutoIncrement tableName="users" columnName="user_id" columnDataType="INT" startWith="1" incrementBy="1"/>
        <addDefaultValue tableName="users" columnName="role" defaultValue="ROLE_LEARNER"/>
        <addDefaultValue tableName="users" columnName="enabled" defaultValue="1"/>
    </changeSet>
</databaseChangeLog>
